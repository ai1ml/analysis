# ---------- page setup ----------
st.set_page_config(page_title="Cloud Savings (MVP)", layout="wide")
st.markdown("""
<style>
/* compact but not cramped */
.block-container { padding-top: 1.0rem; padding-bottom: 0.8rem; }
div[data-testid="stHorizontalBlock"] { gap: 0.5rem !important; }
